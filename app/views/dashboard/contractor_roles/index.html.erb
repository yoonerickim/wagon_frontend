<div id="content" class="dashboard">
	<div id="vendor_nav">
		<ul>
      <%= render 'shared/dashboard_top_tabs', selected: 'list_contractors' %> 
		</ul>
	</div>
  <div id="content_wrap">
		<div id="main_tabs">
			<ul class="tabs">
			</ul>
			<div class="tab_container">
        <div id="tab1" class="tab_content">
          <%= render 'shared/flash', flash: flash %>
					<table>
						<thead>
							<tr>
								<th width="30%">User</th>
								<th width="28%">Email</th>
								<th width="15%">Clocked in?</th>
								<th width="28%"></th>
							</tr>
						</thead>
						<% if @roles.empty? %>
						<tr><td colspan="4" align="center"><span class="note">No contractors added yet.</span></td></tr>
						<% end %>
						<% @roles.each do |role| %>
							<tr>
								<td valign="middle" class="title username">
                  <%= role.user.name %>
                </td>
								<td valign="middle" class="title role_details"><a href="mailto:<%= role.user.email %>"><%= role.user.email %></a><br />
								<%= role.user.cell_phone %></td>
								<td valign="middle" class="title role"><%= role.user.clocked_in %></td>
								
								<td valign="middle" align="center">
								    <%= link_to 'Show', dashboard_contractor_role_path(role), :class=>'btn_small grey' %> 
									  <%= link_to 'Edit', edit_dashboard_contractor_role_path(role), :class=>'btn_small grey' %> 
									  <%= link_to 'Delete', dashboard_contractor_role_path(role), method: :delete, confirm: "This will remove the contractor role of this user. Are you sure?", :class=>'btn_small grey' %>
								</td>
							</tr>
						<% end %>
					</table>
					<%= link_to 'New Delivery Contractor', new_dashboard_contractor_role_path, :class=>'btn_med' %> 
				</div>
				<div class="clear"></div>
			</div>
		</div>
		<!-- end #main_tabs -->
		<div id="module_boxes">
			<div class="clear"></div>
		</div>
  </div>
  <!--end content_wrap-->
</div>
<!--end content-->





