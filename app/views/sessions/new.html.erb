<div class="home">
<div id="content" class="sub login">
	<div id="content_wrap" class="center">
		<div id="main">
			<%= render 'shared/flash', flash: flash %>
		
			<h1 class="secure">Sign In</h1>
			<%= form_tag login_path do %>
			  <p>
			    <%= label_tag :username, 'Email or Phone' %><br />
			    <%= text_field_tag :username, params[:username] %>
			  </p>
			  <p>
			    <%= label_tag :password %><br />
			    <%= password_field_tag :password %>
			  </p>
			  <p>
			    <%= link_to "Forgot your password?", forgot_password_users_path %>
			  </p>
			  <%= submit_tag "Sign In" %>
			  <div class="secure"></div>
			<% end %>
	  </div><!--
	  <div id="sidebar">
	  	<div class="sub_image">
	  		<img src="/assets/login_page_ad.png" width="560"/>
	  	</div>
	  </div> -->
	  <div class="clear"></div>
	</div>
</div>
</div>