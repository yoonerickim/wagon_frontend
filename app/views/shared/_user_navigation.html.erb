<% if current_user %>
<div id="mini_nav">
	<ul>
		<li>Logged in as <%= current_user.first_name %></li>
		<li><%= link_to "My Account", account_path %></li>
		<li><%= link_to "Vendor Account", admin_path %></li>
		<li><%= link_to "Administration", site_path %></li>
		<li><%= link_to "Logout", session_path, :method => :delete %></li>
	</ul>
</div>
<!--end mini_nav -->
<% else %>
<div id="login" class="modal">
	<div class="modal-header">
		<h2>Login</h2>
		<a class="modal_close" href="#"></a>
	</div>
	<%= form_tag session_path, :id => "new_session" do %>
		<div class="txt-fld">
	  	<%= label_tag :username %>
			<%= text_field_tag :username, params[:username] %>
		</div>
		<div class="txt-fld">
	  	<%= label_tag :password %>
			<%= password_field_tag :password %>
		</div>
		<div class="btn-fld">
			<%= submit_tag "Log In" %>
			<%= link_to "Reset Password", forgot_password_users_path %>
			<%= link_to "Register?", new_user_path %>
		</div>
	<% end %>
</div>
<% end %>
