<div id="content">
  <div id="page_box">
    <div class="close">Close</div>
    <div class="toon"></div>
    <div class="steps"></div>
  </div>
  <div class="step_one_tab"><a href="#" onClick="window.history.back(); return false;">Back to Step 1</a></div>
  <div id="toolbar">
    <div id="map_search">
      <form onSubmit="return false;">
        <div class="search_box">
          <span><input type="text" id="filter_search" class="search" placeholder="Filter by food type, menu item, or restaurant"/></span>
        </div>
      </form>
    </div>
    <div class="step_two">Step 2: Choose a Restaurant</div>
    <div id="map_tools">
      <div class="search_box">
        <span><input type="text" placeholder="<%= @placeholder_for_move_spot_input %>"/></span>
				<input type="hidden" id="formatted_address" name="formatted_address" value="params[:a]">
      </div>
      <a href="#" class="btn_update_map">Move Pin</a>
    </div>
  </div>
  <div id="sidebar">
    <div id="listings">
        <h4><%= @listings_heading %></h4>
      <ul>
        <%= render :partial => 'location', :collection => @locations %>
      </ul>
    </div>
  </div>
  <!--end #sidebar-->
  <div id="map_wrapper">
    <input type="hidden" id="pin_lat" name="pin_lat" />
    <input type="hidden" id="pin_lng" name="pin_lng" />
    <input type="hidden" id="pin_address" name="pin_address" />
    <div id="location_overlay" style="display:none;">
      <div class="overlay_wrapper"><div class="loading"></div></div>
    </div>
    <div id="options_overlay" style="display:none;">
      <div class='loading'></div>
    </div>
    <div id="map" data-origin-lat="<%= @origin[:lat] %>" data-origin-lng="<%= @origin[:lng] %>" data-delivery-type="<%= @delivery_type %>">
    </div>
  </div>

</div>
<!--end #content-->
<div class="clear"></div>
